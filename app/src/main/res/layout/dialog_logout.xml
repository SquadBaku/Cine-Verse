<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.karrar.movieapp.ui.profile.logout.LogoutViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/radius_lg"
        android:backgroundTint="@color/background_card"
        app:cardCornerRadius="@dimen/radius_xl">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/icon_container"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/oval_background_logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logout"
                    app:tint="@color/additional_primary_red" />
            </FrameLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_confirmation"
                style="@style/Typography.title_sm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shade_primary"
                android:layout_marginTop="@dimen/radius_xl"
                android:text="@string/are_you_sure_you_want_to_logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_container" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_confirmation_message"
                style="@style/Typography.body_sm_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/radius_s"
                android:textColor="@color/shade_secondary"
                android:text="@string/you_can_always_sign_back_in_with_your_account"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_confirmation" />


            <LinearLayout
                android:id="@+id/buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/radius_3xl"
                android:layout_marginBottom="@dimen/radius_xl"
                android:layout_marginHorizontal="@dimen/radius_xl"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_confirmation_message" >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:background="@drawable/btn_rectangle"
                    style="@style/Typography.body_md_medium"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.onCloseDialog()}"
                    android:textColor="@color/button_onSecondary"
                    app:backgroundTint="@color/button_secondary"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm"
                    android:background="@drawable/btn_rectangle"
                    android:layout_width="0dp"
                    style="@style/Typography.body_md_medium"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/radius_lg"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewModel.onLogout()}"
                    android:textColor="@color/button_onPrimary"
                    app:backgroundTint="@color/additional_primary_red"
                    android:text="@string/logout"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
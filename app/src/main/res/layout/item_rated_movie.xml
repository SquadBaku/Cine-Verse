<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.karrar.movieapp.ui.profile.myratings.RatedUIState" />

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.profile.myratings.RatedMoviesInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:onClick="@{() -> listener.onClickMovie(item.id)}"
        app:cardCornerRadius="@dimen/radius_small"
        app:cardElevation="0dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_card"
            android:minHeight="88dp"
            android:paddingEnd="16dp"
            app:cardCornerRadius="@dimen/radius_lg">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_movie"
                android:layout_width="64dp"
                android:layout_height="88dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:mediaPoster="@{item.posterPath}"
                app:shapeAppearanceOverlay="@style/PosterCorners"
                tools:src="@drawable/test" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_user_rating"
                style="@style/Typography.body_sm_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:drawableTint="@color/additional_primary_yellow"
                android:ellipsize="end"
                android:maxLines="1"
                android:text='@{item.userRating}'
                android:textColor="@color/shade_primary"
                app:layout_constraintEnd_toStartOf="@id/text_rate_movie"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/image_movie"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="You gave it 4.0 â˜…" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_title_movie"
                style="@style/Typography.body_md_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:text="@{item.title}"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/text_rate_movie"
                app:layout_constraintStart_toEndOf="@id/image_movie"
                app:layout_constraintTop_toBottomOf="@id/text_user_rating"
                tools:text="The Flash" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_category"
                style="@style/Typography.body_sm_regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{item.category}"
                android:textColor="@color/shade_secondary"
                android:textSize="12sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/text_title_movie"
                app:layout_constraintTop_toBottomOf="@id/text_title_movie"
                tools:text="Drama, Action, Crime, Thriller" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_rate_movie"
                style="@style/Typography.label_md_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/new_star"
                android:drawablePadding="8dp"
                android:text="@{item.rating}"
                android:textColor="@color/shade_primary"
                app:drawableTint="@color/additional_primary_yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_title_movie" />

            <TextView
                android:id="@+id/text_release"
                style="@style/Regular.Small.ternary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawablePadding="4dp"
                android:text="@{item.releaseDate}"
                android:textColor="@color/shade_secondary"
                app:drawableStartCompat="@drawable/new_calendar"
                app:drawableTint="@color/shade_secondary"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/image_movie"
                app:layout_constraintTop_toBottomOf="@id/"
                tools:text="2013, July" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
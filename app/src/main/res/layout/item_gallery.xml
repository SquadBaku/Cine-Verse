<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.karrar.movieapp.domain.enums.HomeItemsType" />

        <variable
            name="viewModel"
            type="com.karrar.movieapp.ui.actorDetails.ActorViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_screen">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/actor_image1"
            android:layout_width="0dp"
            android:layout_height="134dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:isVisible="@{viewModel.actorDetailsUIState.success}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:posterImage="@{viewModel.actorDetailsUIState.imageUrl}"
            app:shapeAppearanceOverlay="@style/GalleryRounded"
            tools:src="@drawable/chris_evans" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/actor_image2"
            android:layout_width="0dp"
            android:layout_height="134dp"
            android:layout_marginTop="@dimen/radius_lg"
            android:layout_marginBottom="@dimen/radius_lg"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:isVisible="@{viewModel.actorDetailsUIState.success}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actor_image1"
            app:posterImage="@{viewModel.actorDetailsUIState.imageUrl}"
            app:shapeAppearanceOverlay="@style/GalleryRounded"
            tools:src="@drawable/chris_evans" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/actor_image3"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_marginStart="@dimen/radius_lg"
            android:layout_marginBottom="@dimen/radius_lg"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:isVisible="@{viewModel.actorDetailsUIState.success}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/actor_image1"
            app:layout_constraintTop_toTopOf="parent"
            app:posterImage="@{viewModel.actorDetailsUIState.imageUrl}"
            app:shapeAppearanceOverlay="@style/GalleryRounded"
            tools:src="@drawable/chris_evans" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
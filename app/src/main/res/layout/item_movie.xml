<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.adapters.MovieInteractionListener" />

        <variable
            name="item"
            type="com.karrar.movieapp.ui.models.MediaUiState" />

        <variable
            name="type"
            type="com.karrar.movieapp.domain.enums.HomeItemsType" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_movie"
                android:layout_width="136dp"
                android:layout_height="182dp"
                android:layout_marginHorizontal="6.dp"
                android:onClick="@{() -> listener.onClickMovie(item.id)}"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:mediaPoster="@{item.imageUrl}"
                app:shapeAppearanceOverlay="@style/CardCorners.Large"
                tools:src="@drawable/test" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_title_movie"
                style="@style/Typography.body_md_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/radius_s"
                android:ellipsize="end"
                android:lines="1"
                android:text="@{item.title}"
                android:layout_marginHorizontal="12.dp"
                android:textColor="@color/shade_secondary"
                app:layout_constraintEnd_toEndOf="@+id/image_movie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_movie"
                tools:text="The Mandalorian" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_rate_movie"
                style="@style/Typography.label_md_medium"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:paddingEnd="@dimen/radius_ys"
                android:paddingStart="@dimen/radius_s"
                android:layout_margin="@dimen/radius_s"
                android:gravity="center"
                android:drawableEnd="@drawable/star"
                android:drawablePadding="@dimen/radius_xs"
                app:drawableTint="@color/additional_primary_yellow"
                android:background="@drawable/rounded_rating_background"
                android:text="@{String.valueOf(item.rating)}"
                android:textColor="@color/shade_primary"
                app:layout_constraintEnd_toEndOf="@+id/image_movie"
                app:layout_constraintTop_toTopOf="@+id/image_movie"
                tools:text="8.4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
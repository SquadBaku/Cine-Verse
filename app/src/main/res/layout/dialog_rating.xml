<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.karrar.movieapp.ui.movieDetails.MovieDetailsViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:backgroundTint="@color/background_bottom_sheet"
        app:cardCornerRadius="@dimen/radius_xl">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top handle bar -->
            <View
                android:id="@+id/bar_view"
                android:layout_width="48dp"
                android:layout_height="3dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bottom_sheet_bar_shape"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/tv_rate_the_movie"
                style="@style/Typography.title_sm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="20dp"
                android:text="@string/rate_the_movie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bar_view" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_rate_the_movie"
                app:layout_constraintBottom_toBottomOf="@id/tv_rate_the_movie" />

            <LinearLayout
                android:id="@+id/faces_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_rate_the_movie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/face_1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/frowning_face"
                    android:onClick="@{() -> viewModel.onChangeRating(1)}"
                    tools:ignore="ContentDescription" />

                <Space android:layout_width="24dp" android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/face_2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/confused_face"
                    android:onClick="@{() -> viewModel.onChangeRating(2)}"
                    tools:ignore="ContentDescription" />

                <Space android:layout_width="24dp" android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/face_3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/neutral_face"
                    android:onClick="@{() -> viewModel.onChangeRating(3)}"
                    tools:ignore="ContentDescription" />

                <Space android:layout_width="24dp" android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/face_4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/smiling_face"
                    android:onClick="@{() -> viewModel.onChangeRating(4)}"
                    tools:ignore="ContentDescription" />

                <Space android:layout_width="24dp" android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/face_5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star_struck"
                    android:onClick="@{() -> viewModel.onChangeRating(5)}"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <!-- Rating Bar -->
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="1"
                android:progressDrawable="@drawable/rating_custom"
                android:rating="@{viewModel.uiState.ratingValue}"
                android:onRatingChanged="@{(rb, rating, fromUser) -> viewModel.onChangeRating(rating)}"
                app:layout_constraintTop_toBottomOf="@id/faces_row"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btn_add_rating"
                android:layout_width="0dp"
                android:layout_height="48dp"
                style="@style/Typography.body_md_medium"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/add_rating"
                android:textColor="@color/btn_add_rating_text_color"
                android:background="@drawable/btn_add_rating_background"
                android:enabled="@{viewModel.uiState.ratingValue > 0}"
                android:onClick="@{() -> viewModel.submitRating()}"
                app:layout_constraintTop_toBottomOf="@id/rating_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

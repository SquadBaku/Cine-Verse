<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    android:backgroundTint="@android:color/transparent"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_bottom_sheet"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Drag Handle -->
        <View
            android:layout_width="48dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_drag_handle" />

        <!-- Icon -->
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_light"
            android:contentDescription="@string/app_name"
            android:padding="12dp"
            android:src="@drawable/ic_linkk" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/edit_profile"
            android:textColor="@color/shade_primary"
            android:textAppearance="@style/SemiBold.Medium" />

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/you_ll_be_taken_to_the_website_to_update_your_name_username_or_profile_picture"
            android:textAppearance="@style/Regular.Small"
            android:textColor="@color/shade_secondary" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="@string/cancel"
                android:textColor="@color/button_onSecondary"
                app:backgroundTint="@color/button_secondary"
                app:cornerRadius="12dp" />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWebsite"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:textSize="12sp"
                style="@style/SemiBold.Medium"
                android:text="@string/go_to_website"
                android:textColor="@color/button_onPrimary"
                app:backgroundTint="@color/brand_primary"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

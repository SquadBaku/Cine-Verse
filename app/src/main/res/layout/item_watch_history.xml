<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.karrar.movieapp.ui.profile.watchhistory.MediaHistoryUiState" />

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.profile.watchhistory.WatchHistoryInteractionListener" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp"
        >



        <com.google.android.material.imageview.ShapeableImageView
            android:background="@color/additional_primary_red"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:contentPadding="14dp"
            android:tint="@color/button_onPrimary"
            app:shapeAppearanceOverlay="@style/ImageRadiusLarge"
            android:layout_gravity="end|center"
            android:onClick="@{() -> listener.onSwipeDelete(item)}"
            android:contentDescription="@string/delete"
            android:src="@drawable/ic_trash" />

        <androidx.cardview.widget.CardView
            android:id="@+id/foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> listener.onClickMovie(item)}"
            app:cardCornerRadius="@dimen/radius_small"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_card"
                android:minHeight="88dp"
                android:paddingStart="0dp"
                android:paddingEnd="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_movie"
                    android:layout_width="64dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:mediaPoster="@{item.posterPath}"
                    app:shapeAppearanceOverlay="@style/PosterCorners"
                    tools:src="@drawable/test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_title_movie"
                    style="@style/Typography.body_md_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{item.movieTitle}"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toStartOf="@id/text_rate_movie"
                    app:layout_constraintStart_toEndOf="@id/image_movie"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="The Flash" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_category"
                    style="@style/Typography.body_sm_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{item.category}"
                    android:textColor="@color/shade_secondary"
                    android:textSize="12sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/text_title_movie"
                    app:layout_constraintTop_toBottomOf="@id/text_title_movie"
                    tools:text="Drama, Action, Crime, Thriller" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_rate_movie"
                    style="@style/Typography.label_md_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/new_star"
                    android:drawablePadding="8dp"
                    android:text="@{item.voteAverage}"
                    android:textColor="@color/shade_primary"
                    app:drawableTint="@color/additional_primary_yellow"
                    app:layout_constraintBottom_toBottomOf="@id/text_title_movie"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_title_movie" />

                <TextView
                    android:id="@+id/text_release"
                    style="@style/Regular.Small.ternary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:drawablePadding="4dp"
                    android:text="@{item.releaseDate}"
                    android:textColor="@color/shade_secondary"
                    app:drawableStartCompat="@drawable/new_calendar"
                    app:drawableTint="@color/shade_secondary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_movie"
                    app:layout_constraintTop_toBottomOf="@id/text_category"
                    tools:text="2013, July" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>
</layout>

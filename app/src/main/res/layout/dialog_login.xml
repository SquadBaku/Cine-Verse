<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.karrar.movieapp.ui.movieDetails.saveMovie.SaveMovieViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@drawable/bottom_sheet_corners"
        android:paddingHorizontal="16dp"
        android:fitsSystemWindows="true"
        android:paddingBottom="?attr/actionBarSize">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/radius_12"
            android:background="@drawable/bottom_sheet_bar"/>







        <FrameLayout
            android:id="@+id/banner"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"
            android:background="@drawable/add_to_collection_icon">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login"
                android:layout_gravity="center"
                app:tint="@color/brand_primary" />

        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/you_re_almost_there"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner"
            android:layout_marginTop="16dp"
            style="@style/Typography.title_sm"
            android:textColor="@color/shade_primary"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Log in to save movies, create collections, and get personalized recommendations."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            style="@style/Typography.body_sm_medium"
            android:textColor="@color/shade_secondary"
            android:gravity="center"/>

        <TextView
            android:id="@+id/not_now_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/not_now_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/login_button"
            app:layout_constraintTop_toBottomOf="@id/description"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="24dp"
            android:text="@string/not_now"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/button_onSecondary"
            android:onClick="@{viewModel.onClickEscButton}"
            />

        <TextView
            android:id="@+id/login_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/add_to_collection_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/not_now_button"
            app:layout_constraintTop_toBottomOf="@id/description"
            android:layout_marginTop="24dp"
            android:text="@string/log_in"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/button_onPrimary"
            android:onClick="@{viewModel.onClickLogin}"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
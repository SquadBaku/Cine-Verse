<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Off -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/media_card_width" />
            <solid android:color="@color/white" />
            <stroke android:color="@color/shade_secondary" android:width="1dp" />
            <size android:width="40dp" android:height="24dp" />
            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"/>
        </shape>
    </item>

    <!-- On -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/media_card_width" />
            <solid android:color="@color/brand_primary" />
            <stroke android:color="@color/shade_secondary" android:width="1dp" />
            <size android:width="40dp" android:height="24dp" />
            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"/>
        </shape>
    </item>

</selector>
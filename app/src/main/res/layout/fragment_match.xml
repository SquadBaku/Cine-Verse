<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_screen"
        tools:context=".ui.match.MatchFragment">

        <LinearLayout
            android:id="@+id/top_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingHorizontal="16.dp"
            android:paddingVertical="16.dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/Typography.title_sm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="8.dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/discover_your_match"
                android:textColor="@color/shade_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.dp"
            android:background="@color/stroke_primary"
            android:orientation="horizontal"
            android:paddingHorizontal="16.dp"
            android:paddingVertical="16.dp"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_container">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/magic_pen"
            android:layout_width="64.dp"
            android:layout_height="64.dp"
            android:background="@drawable/circle_container"
            android:gravity="center"
            android:layout_marginBottom="16.dp"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="28.dp"
                android:layout_height="28.dp"
                android:src="@drawable/magic_pen" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            style="@style/Typography.title_sm"
            android:layout_width="240.dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="24.dp"
            android:text="@string/not_sure_what_to_watch"
            android:textColor="@color/shade_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_container" />

        <TextView
            android:id="@+id/description"
            style="@style/Typography.body_sm_medium"
            android:layout_width="240.dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.dp"
            android:gravity="center"
            android:text="@string/answer_a_few_quick_questions_and_we_ll_match_you_with_the_perfect_picks"
            android:textColor="@color/shade_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <LinearLayout
            android:id="@+id/start_matching_button"
            android:layout_width="240.dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectancle_button"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:paddingVertical="12.dp"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                style="@style/Typography.body_sm_medium"
                android:layout_width="240.dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/start_matching"
                android:textColor="@color/button_onPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>